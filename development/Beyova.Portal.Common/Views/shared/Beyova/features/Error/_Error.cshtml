@using Beyova;
@using Beyova.ExceptionSystem;
@model  ExceptionInfo

<style>
    #ex {
        display: none;
    }

        #ex .modal-body {
            overflow: auto;
        }
</style>
<div class="wrapper full-page-wrapper page-error text-center">
    <div class="inner-page">
        <h1>
            <span class="clearfix title">
                <span class="number">@((int)Model.Code.Major)</span><span class="text">Oops! </span>
            </span>
        </h1>

        <p>
            @{
                if (Model != null)
                {
                    <text>@(Model.Code.Major == ExceptionCode.MajorCode.Undefined ? "Something is wrong!" : Model.Message)</text>
                    if (Request != null && Request.Url != null && Request.Url.IsLoopback)
                    {
                        <text>
                            <br />
                            <a href="javascript:showDetail();">Show detail</a>
                        </text>
                    }
                }
            }
        </p>
    </div>
</div>
@{
    if (Model != null && Request != null && Request.Url != null && Request.Url.IsLoopback)
    {
        <text>
            <div id="ex" class="modal fade" aria-hidden="true" style="display: none;">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                            <h3 class="modal-title">Exception Detail</h3>
                        </div>

                        <div class="modal-body">
                            <div style="width:100%;height:400px;overflow-wrap:break-word;overflow-y:auto">
                                <pre>@(Model.ToJson())</pre>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <script>
                function showDetail() {
                    $('#ex').modal('show');
                }
            </script>
        </text>
    }

    if (Model.Code.Major == ExceptionCode.MajorCode.UnauthorizedOperation)
    {
        <text>
            <script>
                window.location = "/security/";
            </script>
        </text>
    }
}
