<Window x:Class="Beyova.InternalUtil.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Beyova.InternalUtil"
        mc:Ignorable="d"
        Title="Beyova Internal Util" Height="350" Width="654.025" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="88"/>
            <ColumnDefinition Width="280"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="textBox_input" Margin="10" TextWrapping="Wrap" AcceptsReturn="True"/>
        <TextBox x:Name="textBox_output" Margin="10" TextWrapping="Wrap" AcceptsReturn="True" Grid.Column="2" />
        <Button x:Name="btn_Encrypt" Content="--&gt;" Grid.Column="1" Margin="10,97,10,0" VerticalAlignment="Top" Click="btn_Encrypt_Click" Height="30"/>
        <Button x:Name="btn_Decrypt" Content="&lt;--" Grid.Column="1" Margin="10,195,10,0" VerticalAlignment="Top" Click="btn_Decrypt_Click" Height="30"/>

    </Grid>
</Window>
