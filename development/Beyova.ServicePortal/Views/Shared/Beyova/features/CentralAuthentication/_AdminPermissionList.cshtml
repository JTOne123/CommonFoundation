@using Beyova;
@using Beyova.ApiTracking;
@using Beyova.Gravity;
@model List<AdminPermission>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Product Name</th>
                <th>Identifier</th>
                <th>Description</th>
                <th>Management</th>
            </tr>
        </thead>
        <tbody>
            @{
                if (Model.HasItem())
                {
                    var productListCache = WebCore.ProductCache.GetAll();
                    foreach (var one in Model)
                    {
                        <tr>
                            <td class="name"><a href="javascript:showEntity('@(one.Key)')">@(one.Name)</a></td>
                            <td>@(one.ProductKey.HasValue ? (productListCache.FirstOrDefault(x => x.Key == one.ProductKey)?.Name) : "<System>")</td>
                            <td>@(one.Identifier)</td>
                            <td>@(one.Description)</td>
                            <td>
                                <a class="delete-permission" title="Delete Permission" key="@(one.Key)" href="#"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <text>
                        <tr><td colspan="5">No Result.</td></tr>

                    </text>
                }
            }

        </tbody>
    </table>
</div>