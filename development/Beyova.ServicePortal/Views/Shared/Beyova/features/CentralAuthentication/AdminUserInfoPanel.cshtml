@using Beyova;
@{
    ViewBag.Title = "Admin User Management";
    var parameterProductKey = Beyova.Gravity.CentralManagementContext.ParameterProductKey;
}

@section css{
}
@section js{
    <script type="text/javascript">
        function showEntity(key) {
            showEntityDialog(key, "/CentralAuthentication/GetAdminUserInfo/?productKey=@(parameterProductKey)&key=", "entityForm");
        }

        function createOrUpdateUser() {
            createorUpdateEntity("/CentralAuthentication/CreateOrUpdateAdminUserInfo/?productKey=@(parameterProductKey)", "entityForm", undefined, function (json) {
                if (json) {
                    window.location.reload();
                }
            });
        }

        function queryUser() {
            var criteria = getForm($("#filter"));

            callAction("/CentralAuthentication/QueryAdminUserInfo/?productKey=@(parameterProductKey)", criteria, function (response) {
                $('#result').html(response);
            }, undefined, function () {
            });
        }

        $(document).ready(function () {
            $("select").multiselect();
            $('#entityForm').validator();

            $("#queryUser").click(function () {
                queryUser();
            }).click();

            $("#createUser").click(function () {
                showEntity();
            });

            $("#btn_dialog_Save").click(function () {
                createOrUpdateUser();
            });

            $("#result").delegate("a.delete-user", "click", function (e) {
                var userKey = $(this).attr("userKey");
                var row = $(this).closest("tr");
                showConfirmDialog("Warning", "Deletion cannot rollback. Are you sure to continue?", function () {
                    callAction("/CentralAuthentication/DeleteAdminUserInfo/?productKey=@(parameterProductKey)&key=" + userKey, undefined, function (response) {
                        row.remove();
                    }, undefined, function () {
                    });
                })

            });
        });


    </script>

}
@section modal{
    <div id="entityForm" class="modal fade" aria-hidden="true" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h3 class="modal-title">Admin User</h3>
                </div>

                <div class="modal-body">
                    <div class="form-horizontal" id="endpointForm">
                        <input type="hidden" name="Key" />
                        <input type="hidden" name="ProductKey" readonly="readonly" value="@(parameterProductKey)" />

                        <div class="form-group">
                            <label class="col-sm-3 control-label">Name</label>
                            <div class="col-sm-8">
                                <input type="text" placeholder="" class="form-control" name="Name" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Login Name</label>
                            <div class="col-sm-8">
                                <input type="text" placeholder="" class="form-control" name="LoginName" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Email</label>
                            <div class="col-sm-8">
                                <input type="text" placeholder="" class="form-control" name="Email" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <a id="btn_dialog_ResetPassword" class="btn btn-default visible-to-update-only"><i class="fa fa-fw fa-key"></i> Renew Security</a>
                    <a id="btn_dialog_Close" class="btn btn-default" data-dismiss="modal">Cancel</a>
                    <a id="btn_dialog_Save" class="btn btn-custom-primary"><i class="fa fa-fw fa-cloud-upload"></i> Save</a>
                </div>
            </div>
        </div>
    </div>

}
@Html.Partial("_TopNavigation")
<div class="content">
    <div class="main-header">
        <h2>Admin Users</h2>
        <em>@(WebCore.ProductCache.GetAll().FirstOrDefault(x => x.Key == parameterProductKey)?.Name)</em>
    </div>
    <div class="main-content">
        <div class="bottom-30px form-inline" id="filter">
            <input type="hidden" name="ProductKey" value="@(Beyova.Gravity.CentralManagementContext.ParameterProductKey)" />
            <div class="form-group">
                <button id="queryUser" class="btn btn-primary"><i class="fa fa-refresh"></i> Refresh </button>
            </div>
            <div class="form-group">
                <button id="createUser" class="btn btn-primary"><i class="fa fa-plus-circle"></i> Create </button>
            </div>
        </div>

        <div id="result">

        </div>
    </div>
</div>
